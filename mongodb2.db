/* $оператор .. _id название */


db.teacher.aggregate([
    {
        $group:{
            _id:'$lesson',
            count:{$sum:1}
        }
    },
    {
        $sort:{
            count:-1
        }
    },
    {
        $project:{
            lesson:'$_id',
            _id:0,
            count:1
        }
    }
])


db.teacher.find()
db.students.find()


db.teacher.aggregate([
    {
        $match:{
            class_curator:{$gt:5}
        }
    },
    {
        $lookup:{
            from:'students',
            localField:'class_currator',
            foreignField:'class',
            as:'myStudents'
        }
    },
    {
        $skip:2
    },
    {
        $limit:2
    },
    
    {
        $match:{
            'myStudents.name':'Bob'
        }
    }
])
/* $match повторяет функцию find */




db.teacher.aggregate([
    {
        $match:{
            class_curator:{$gt:5}
        }
    },
    {
        $lookup:{
            from:'students',
            localField:'class_currator',
            foreignField:'class',
            as:'myStudents'
        }
    },
    {
        $unwind:'$myStudents'
    },
    {
        $unwind:'$myStudents.parents'
    },
    {
        $match:{
            'myStudents.parents.professin':'doctor'
        }
    },
    {
        $count:'DoctorCount'
    }
])
/* $unwind розчеплюэ массив с одного массива на несколько обьектов */


